{
  "name": "LIFECHANGE-server",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "index.ts",
  "license": "Apache-2.0",
  "eslintConfig": {
    "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "rules": {
      "import/extensions": "off",
      "import/prefer-default-export": "off",
      "no-console": "off",
      "no-underscore-dangle": "off",
      "no-unused-vars": "off",
      "react-hooks/exhaustive-deps": "off",
      "react-hooks/rules-of-hooks": "warn",
      "@typescript-eslint/no-unused-vars": [
        "off",
        {
          "varsIgnorePattern": "^_",
          "argsIgnorePattern": "^_"
        }
      ],
      "@typescript-eslint/no-unused-expressions": "off"
    }
  },
	"engines": {
		"node": "16.x"
	},
	"overrides": {
		"webidl-conversions": "6.1.0",
		"whatwg-url": "12.0.1"
	},
  "scripts": {
    "start": "tsx watch --clear-screen=false --ignore node_modules index.ts",
		"reset": "node .node/reset.cjs --pnpm",
		"autofix": "node .node/autofix.cjs",
		"gcloud": "node .node/gcloud.cjs --full-deploy"
  },
  "dependencies": {
    "@types/react-router-dom": "5.3.3",
    "ajv": "8.17.1",
    "ajv-keywords": "5.1.0",
    "axios": "1.12.2",
    "bcryptjs": "3.0.2",
    "body-parser": "2.2.0",
    "cors": "2.8.5",
    "date-fns": "4.1.0",
    "dotenv": "17.2.3",
    "express": "5.1.0",
    "express-session": "1.18.2",
    "google-auth-library": "10.4.0",
    "jsonwebtoken": "9.0.2",
    "module-alias": "2.2.3",
    "moment-timezone": "0.6.0",
    "mongodb": "6.20.0",
    "mongoose": "8.19.1",
    "nodemailer": "7.0.9",
    "oauth-signature": "1.5.0",
    "passport": "0.7.0",
    "passport-google-oauth20": "2.0.0",
    "qs": "6.14.0",
    "request": "^2.88.2",
    "request-promise": "^4.2.6",
    "stripe": "19.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "3.0.0",
    "@types/cors": "2.8.19",
    "@types/express": "5.0.3",
    "@types/express-serve-static-core": "5.1.0",
    "@types/express-session": "1.18.2",
    "@types/jsdom": "27.0.0",
    "@types/mocha": "10.0.10",
    "@types/node": "24.7.2",
    "@types/nodemailer": "7.0.2",
    "@types/passport": "1.0.17",
    "@types/passport-google-oauth20": "2.0.16",
    "@types/qs": "6.14.0",
    "jsdom": "27.0.0",
    "tslib": "2.8.1",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  }
}
